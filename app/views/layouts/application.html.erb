<!DOCTYPE html>
<html>
    <head>
        <title>Planeswalkr</title>
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
        <%= csrf_meta_tags %>
    </head>
    <body>
      <div class="page">

          <!-- Top Nav -->
	      <nav>
            <div class="nav-wrapper #311b92 deep-purple darken-4">
    	          <div class="row">
    		            <div class="col s10 offset-s1">
                        <%= link_to("Super Rad Nerdy Planeswalkr", root_path, class: "brand-logo") %>
		                    <ul id="nav-mobile" class="right hide-on-med-and-down">
		                        <li><a href="/">Search Cards</a></li>
		                        <li><%= link_to("Decks", cardsets_path)%></li>
                            <% if current_user %>
                                <li><%= link_to("Logout", login_path, method: :delete) %></li>
                            <% else %>
		                            <li><%= link_to("Login", login_path)%></li>
                                <li><%= link_to("Register", new_user_path)%></li>
                            <% end %>
		                    </ul>
	                  </div>
                </div>
            </div>
        </nav>
        <!-- End Top Nav -->

        <!-- Side Nav -->
	      <div class="sidebar-top">
		        <div class="menu-sidebar">
			          Search for Cards
			          <ul>
				            <a href="/"><li class="menu-items">Dropdown 1
				            </li></a>
				            <a href="/"><li class="menu-items">Dropdown 2
				            </li></a>
				            <a href="/"><li class="menu-items">Dropdown 3
				            </li></a>
				            <a href="/"><li class="menu-items">Dropdown 4
				            </li></a>
			          </ul>
		        </div>
	      </div>
        <!-- End Side Nav -->

        <div class="content">
          <%= yield %>
        </div>

      </div>

    </body>
</html>
